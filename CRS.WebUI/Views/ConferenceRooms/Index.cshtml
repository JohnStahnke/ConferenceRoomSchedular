@model IEnumerable<CRS.Domain.ConcreteEntities.ConferenceRoom>
@{
    ViewBag.Title = "Conference Room Manager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Conference Room Manager</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Floor</th>
                <th class="text-center">Location</th>
                <th class="text-center" colspan="2">Modify</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.ConferenceRoomID</td>
                    <td class="text-left">@item.ConferenceRoomName</td>
                    <td class="text-center">@item.ConferenceRoomFloor</td>
                    <td class="text-left">@item.ConferenceRoomLocation</td>

                    <td class="text-center">
                        @* Go to the Update page and gather update data *@
                        @Html.ActionLink("Update", "Update", new { SelectedConferenceRoomID = item.ConferenceRoomID }, new { @class = "btn btn-primary btn-xs" })
                    </td>

                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "ConferenceRooms"))
                        {   //Since I only need a ID to delete I do not need another page to gather data
                            @Html.Hidden("ConferenceRoomID", item.ConferenceRoomID)
                            <input type="submit"
                                   class="btn btn-danger btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @* Go to the Insert page and gather insert data *@
        @Html.ActionLink("Add a new Conference Room", "Insert", null, new { @class = "btn btn-primary" })
    </div>
</div>