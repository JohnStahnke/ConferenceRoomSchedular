@model IEnumerable<CRS.Domain.ConcreteEntities.Meeting>

@{
    ViewBag.Title = "Meetings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Listed Meetings</h3>
        <p>
            This is a listing of all our current meetings. <br />
            If you would like to attend one, or cancel out of one, please click the appropriate button below.
        </p>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Subject</th>
                <th class="text-center">Date</th>
                <th class="text-center">Hour</th>
                <th class="text-center">See More...</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.MeetingSubject</td>
                    <td class="text-center">@item.MeetingDate</td>
                    <td class="text-center">@item.MeetingHour</td>

                    <td class="text-center">
                        @using (Html.BeginForm("Index", "MeetingsRoomsAttendees"))
                        {  //Since I only need Both IDs to delete I do not need another page to gather data
                            @Html.Hidden("SelectedMeetingID", item.MeetingID)
                            <input type="submit"
                                   class="btn btn-info btn-xs"
                                   value="Details" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

